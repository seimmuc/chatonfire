{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",

    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "exclude": ["./bin/**"]
}
